<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shape_sheet_dialog_bg">

    <LinearLayout
        android:id="@+id/closeBtn"
        android:layout_width="@dimen/dp_55"
        android:layout_height="@dimen/dp_35"
        android:background="@drawable/bg_x_btn"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_close_24"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/black" />
    </LinearLayout>

    <TextView
        android:id="@+id/StoreIdTitle"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Store ID :"
        android:textStyle="bold"
        android:textSize="@dimen/sp_18"
        android:drawableStart="@drawable/ic_round_store_24"
        android:drawablePadding="@dimen/dp_2"
        app:layout_constraintTop_toBottomOf="@+id/guidelineHPer10"
        app:layout_constraintStart_toStartOf="@+id/guidelineVPer20"
        app:layout_constraintEnd_toEndOf="@+id/guidelineVPer80"
        />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/deviceNameInputLayout"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:endIconMode="clear_text"
        app:layout_constraintTop_toBottomOf="@+id/StoreIdTitle"
        app:layout_constraintStart_toStartOf="@+id/StoreIdTitle"
        app:layout_constraintEnd_toEndOf="@+id/StoreIdTitle">

        <AutoCompleteTextView
            android:id="@+id/etDeviceId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:paddingTop="@dimen/dp_2"
            android:paddingBottom="@dimen/dp_2"
            android:singleLine="true"
            android:textSize="@dimen/sp_18"
            android:textStyle="bold" />
    </com.google.android.material.textfield.TextInputLayout>


    <TextView
        android:id="@+id/idleTitle"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Idle Time (sec) :"
        android:textStyle="bold"
        android:textSize="@dimen/sp_18"
        android:drawableStart="@drawable/ic_baseline_feedback_24"
        android:drawablePadding="@dimen/dp_2"
        app:layout_constraintStart_toStartOf="@+id/deviceNameInputLayout"
        app:layout_constraintEnd_toEndOf="@+id/deviceNameInputLayout"
        app:layout_constraintTop_toBottomOf="@+id/deviceNameInputLayout"
        />



    <com.skydoves.powerspinner.PowerSpinnerView
        app:layout_constraintStart_toStartOf="@+id/idleTitle"
        app:layout_constraintTop_toBottomOf="@+id/idleTitle"
        app:layout_constraintEnd_toEndOf="@+id/idleTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:hint="120"
        android:padding="10dp"
        android:textSize="@dimen/sp_14"
        android:textStyle="bold"
        android:background="@color/greenDark"
        android:foreground="?attr/selectableItemBackground"
        android:textColor="@color/white_93"
        android:textColorHint="@color/white_70"
        app:spinner_arrow_tint="@color/white"
        app:spinner_divider_color="@color/white_70"
        app:spinner_popup_background="@color/background800"
        app:spinner_arrow_gravity="end"
        app:spinner_arrow_padding="8dp"
        app:spinner_divider_show="true"
        app:spinner_divider_size="0.4dp"
        app:spinner_item_array="@array/IdleTime"
        app:spinner_popup_animation="dropdown"
        app:spinner_popup_elevation="14dp" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineHPer10"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.1" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVPer20"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.20" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guidelineVPer80"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.80" />


</androidx.constraintlayout.widget.ConstraintLayout>